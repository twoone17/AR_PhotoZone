<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:background = "@color/color_palette_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:padding = "5dp"
                    android:id="@+id/Temp_Setting_Button"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    app:srcCompat="@drawable/option_btn_ver2" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_baseline_android_24"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_overlay="true"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/circle_img"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/userNickname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="user_name"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/black"
                        android:layout_gravity ="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/color_palette_1"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.784">

                        <!--android:src="@drawable/bluebookmark"-->

                        <ImageButton
                            android:id="@+id/bookmarkButton"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="130dp"
                            android:layout_marginRight="70dp"
                            android:padding="0dp"
                            android:paddingLeft="20dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/bookmark_btn" />

                        <ImageButton
                            android:id="@+id/Closetbutton"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="100dp"
                            android:padding="0dp"
                            android:paddingLeft="20dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/liked_list_btn" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:background="@color/color_palette_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:background="@drawable/background_round_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/fbutton_color_concrete"
                android:text="My Post"
                android:layout_gravity="left"
                android:fontFamily="@font/military"
                android:textSize="13dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_mypost"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>